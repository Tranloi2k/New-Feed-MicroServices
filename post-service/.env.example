# Post Service Environment Variables

PORT=3002
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres-post:5432/post_db

# Service Secret for inter-service communication
SERVICE_SECRET=your-service-to-service-secret-key-change-this

# RabbitMQ
RABBITMQ_URL=amqp://admin:admin@rabbitmq:5672

# Auth Service (for user lookup)
AUTH_SERVICE_URL=http://auth-service:3001

# CORS
CLIENT_URL=http://localhost:3000

# GraphQL
GRAPHQL_PATH=/graphql
GRAPHQL_PLAYGROUND=true
