# Global Environment Variables (for Docker Compose)

# JWT & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SERVICE_SECRET=your-service-to-service-secret-key-change-this

# Database URLs (Docker Compose will use these)
AUTH_DB_URL=postgresql://postgres:postgres@postgres-auth:5432/auth_db
POST_DB_URL=postgresql://postgres:postgres@postgres-post:5432/post_db
COMMENT_DB_URL=postgresql://postgres:postgres@postgres-comment:5432/comment_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# RabbitMQ
RABBITMQ_URL=amqp://admin:admin@rabbitmq:5672

# Cloudinary (Media Upload Service)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Client URL (for CORS)
CLIENT_URL=http://localhost:3000

# Node Environment
NODE_ENV=development
